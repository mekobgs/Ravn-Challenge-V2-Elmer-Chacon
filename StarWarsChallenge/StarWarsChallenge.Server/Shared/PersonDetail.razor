@using StarWarsChallenge.Service.Response;
<div class="person-detail__wrapper">

    <div class="person-detail__content">


        <div class="h2 person-detail__section-title">
            General Information

        </div>
        <div class="person-detail__info">

            <div class="info-item">
                <div class="h2 low-emphasis">
                    Eye Color

                </div>
                <div class="low-emphasis">
                    @Person.Eye_color
                </div>
            </div>

            <div class="info-item">
                <div class="h2 low-emphasis">
                    Hair Color

                </div>
                <div class="low-emphasis">
                    @Person.Hair_color
                </div>
            </div>
            <div class="info-item">
                <div class="h2 low-emphasis">
                    Skin Color

                </div>
                <div class="low-emphasis">
                    @Person.Skin_color
                </div>
            </div>
            <div class="info-item">
                <div class="h2 low-emphasis">
                    Birth Year
                </div>
                <div class="low-emphasis">
                    @Person.Birth_year
                </div>
            </div>

        </div>
        <div class="h2 person-detail__section-title">
            Vehicles
        </div>
        <div class="person-detail__info">

            @foreach (var vehicle in Person.Vehicles)
            {
<div class="h2 low-emphasis">
    @vehicle.Name
</div>      }

        </div>
    </div>
</div>

@code { [Parameter]
    public PersonResponse Person { get; set; } }